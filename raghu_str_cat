#include<stdio.h>
#include<string.h>

int main() {
    
   char s1[40],s2[40];//declaring 2 characters string s1 and s2
   int i,j;
   printf("enter first string:");
   scanf("%s",&s1);
   printf("enter second string:");
   scanf("%s",&s2);
   for(i=0;s1[i]!='\0';i++)
   {
       
   }
       for(j=0;s2[j]!='\0';j++,i++){
       s1[i]=s2[j];
       }
   s1[i]='\0';//assigning s1 last value as null
   printf(" after concentration :%s",s1);
}

output:

enter first string:raghu
enter second string:varan
after concentration :raghuvaran
