#include<stdio.h>
#define len 50
void raghu_strcpy(char []);//function declaration
int main()
{
    char s1[len];//declaring character string
    printf("enter a string:");
    scanf("%[^\n]s",s1);
    raghu_strcpy(s1);//calling the function
}
void raghu_strcpy(char p[])
{
    char s2[len];//declaring a character string 
    for(int i=0;i<len;i++)//for loop to copy characters from one string to another 
    {
        if(p[i]!='\0')//condition that p character should not be null value
        {
            s2[i]=p[i];//assigning p characters into s 2
        }
    }
    printf("copied string: %s",s2);//printing the string
}

output:

enter a string:raghuvaran
copied string:raghuvarn
