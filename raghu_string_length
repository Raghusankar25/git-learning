#include<stdio.h>
int raghu_strlen(char *);//func declaration 
int main()
{
    char s1[50];//declaring character string 
    printf("enter string:");
    scanf("%[^\n]s",s1);//
    int len=raghu_strlen(s1);//len strores the return value of the called function
    printf("length of the string is %d",len);
}
int raghu_strlen(char *p)
{
    int count=0;//declaring and initializing count variable as zero
    while(*p!='\0')//condition to check string character is null or not
    {
        p++;//incrementing the pointer value
        count=count+1;//incrementing the count value
    }
    return count;//returning  count value
}


output:


enter string:hi this is raghuvaran
length of the string is 21
