#include<stdio.h>
#define len 50
int main()
{
    char s1[len],search;//declaring character search and s1
    int i,c=0;//declaring i and initializing c 
    printf("enter a string:");
    gets(s1);
    printf("enter charcter to be search:");
    scanf("%c",&search);
    for(i=0;i<len;i++)
    {
        if(s1[i]!='\0')
        {
            if(s1[i]==search)
            {
                c=c+1;//incrementing the c value
                break;
            }
        }
    }
    if(c==1)
        printf("first occurence of a given character %c in a given string %s is %d",search,s1,i);
    else
        printf("element not found");
}

output:

enter a string:raghuvaran
enter charcter to be search:k
element not found

enter a string:raghuvaran
enter charcter to be search:a
first occurence of a given character a in a given string priyanka is 1
